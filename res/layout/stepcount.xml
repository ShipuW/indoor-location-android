<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bk"
    >
    <TextView 
        android:id="@+id/myStepText"
        android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:text="K值："
        android:textSize="25sp"
        />
    <EditText 
        android:id="@+id/editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="输入用户身高"
        
        />
    <LinearLayout 
      android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:orientation="horizontal"
        >
         <Button 
        android:id="@+id/stepcount_button"
        android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:text="确定"
		android:textSize="20sp"
		
	android:background="@drawable/begin"
        />
    
      <Button 
        android:id="@+id/stepend_button"
        android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:text="暂停"
		android:textSize="20sp"
		android:layout_marginLeft="70dp"
		android:background="@drawable/end"
        />
      
         <Button 
        android:id="@+id/stepZeor_button"
        android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:text="置0"
		android:textSize="20sp"
		android:background="@drawable/zero"
		android:layout_marginLeft="60dp"
        />
        
        
    </LinearLayout>
   

    
</LinearLayout>